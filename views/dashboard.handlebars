<head>
  <title>BigMood Dashboard</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

{{!-- Nav Bar --}}
<nav>
  <div class="nav-wrapper">
    <div class="container">
      <a href="#" class="brand-logo center">BigMood</a>
      <a href="#" class="sidenav-trigger" data-target="slide-out"><i class="material-icons">menu</i></a>
    </div>
  </div>
</nav>

{{!-- Side Nav Bar --}}
<ul id="slide-out" class="sidenav">
  {{!-- User Info Section --}}
  <li>
    <div class="user-view">
      <div class="background">
        <img src="">
      </div>
      <a href="#user"><img class="circle" src=""></a>
      <a href="#name"><span class="white-text name"></span></a>
      <a href="#email"><span class="white-text email"></span></a>
    </div>
  </li>
  <li>
    <div class="divider"></div>
  </li>
  {{!-- Theme Selection Section --}}
  <li><a class="subheader">Theme</a></li>
</ul>

<div class="container">
  <div class="row">
    <div class="col s12 m8 l6">
      <div class="card">
        <div class="card-content">
          <h3>Dashboard Statistics</h3>
          <p>{INSERT GRAPH HERE}</p>
        </div>
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width">
            <li class="tab"><a href="#mood">Average Mood</a></li>
            <li class="tab"><a class="active" href="#activity">Most Used Activity</a></li>
            <li class="tab"><a href="#quote">Latest Quote</a></li>
          </ul>
        </div>
        <div class="card-content grey lighten-4">
          <div id="mood">
            <h4>Average Mood</h4>
          </div>
          <div id="activity">
            <h4>Most Used Activity</h4>
          </div>
          <div id="quote">
            <h4>Latest Quote</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Modal New Mood Entry --}}
<div class="container">
  <button class="btn indigo hoverable modal-trigger" data-target="newEntry">New Entry</button>
</div>

<div class="modal" id="newEntry">
  <div class="modal-content">
    <h3>How are you feeling?</h3>
    <div class="divider"></div>
    <h3>What are you doing?</h3>
    <div class="divider"></div>
    <div class="modal-footer">
      <button class="btn green">Submit</button>
      <button class="btn red modal-close">Cancel</button>
    </div>

  </div>
</div>

